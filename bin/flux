#!/usr/bin/env node


var program = require('commander');

var pkg = require('../package.json');

var version = pkg.version;

// CLI

program
	.version(version)
	.usage('[options] [dir]')
	.option('-p --port <port>', 'change the server port');

program
	.command('init <dir>')
	.description('generate a flux-app framework into destination dir')
	.action(function() {
    	console.log('init');
	});	

program
	.command('server')
	.alias('s')
	.description('launch flux app server')
	.action(function() {
    	console.log('server');
	});

program
	.command('generate <type>')
	.alias('g')
	.description('generate flux actions, stores, fetchers, compnents...(etc.)')
	.action(function() {
    	console.log('generate');
	});

// program
// 	.command('*')
// 	.description('invalid comamand')
// 	.action(function(env) {
// 		console.log('invalid comamand', env);
// 	});

program.parse(process.argv);


var aliasCommand = function(name, prog, handle) {
	handle
}